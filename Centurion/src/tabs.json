// Tab set
{
    "class": "tabset_control",
    "layer0.texture": "",
    "layer0.tint": [30,30,30],
    "layer0.inner_margin": 0,
    "layer0.opacity": 1,
    "content_margin": 0,
    "tab_overlap":0,
    "tab_width": 180,
    "tab_min_width": 45,
    "tab_height": 28,
    "mouse_wheel_switch": false
},
{
    "class": "tabset_control",
    "settings": ["mouse_wheel_switches_tabs"],
    "mouse_wheel_switch": true
},
// Tab element
{
    "class": "tab_control",
    "content_margin": [8,0],
    "max_margin_trim": 0,
    "hit_test_level": 0,
    "layer0.texture": "",
    "layer0.tint": [60,60,60],
    "layer0.inner_margin": [5,5],
    "layer0.opacity": 1
},
// Tab close state
{
    "class": "tab_control",
    "settings": ["show_tab_close_buttons"],
    "content_margin": [8,0]
},
// Tab hover state
{
    "class": "tab_control",
    "attributes": ["hover"],
    "layer0.texture": ""
},
// Tab active state
{
    "class": "tab_control",
    "attributes": ["selected"],
    "layer0.texture": "",
    "layer0.tint": [80,80,80]
},
// Tab dirty state (close button hidden)
{
    "class": "tab_control",
    "settings": ["!show_tab_close_buttons"],
    "attributes": ["dirty"],
    "content_margin": [12,3,7,3]
}